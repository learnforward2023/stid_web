<p class="mb-4">
  <%= link_to t('.new'), new_oauth_application_path, class: 'inline-block bg-green-600 text-white font-medium py-2 px-4 rounded hover:bg-green-700' %>
</p>

<div class="overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50 dark:bg-gray-700">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider"><%= t('.name') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider"><%= t('.callback_url') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider"><%= t('.confidential') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider"><%= t('.actions') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider"></th>
      </tr>
    </thead>
    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
      <% @applications.each do |application| %>
        <tr id="application_<%= application.id %>">
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
            <%= link_to application.name, oauth_application_path(application), class: 'text-blue-600 dark:text-blue-400 hover:underline' %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
            <%= simple_format(application.redirect_uri) %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
            <%= application.confidential? ? t('doorkeeper.applications.index.confidentiality.yes') : t('doorkeeper.applications.index.confidentiality.no') %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
            <%= link_to t('doorkeeper.applications.buttons.edit'), edit_oauth_application_path(application), class: 'text-blue-600 dark:text-blue-400 hover:underline' %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
            <%= render 'delete_form', application: application %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
